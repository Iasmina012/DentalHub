<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#FFFFFF">

    <ImageButton
        android:id="@+id/buttonClose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="3dp"
        android:src="@android:drawable/ic_menu_close_clear_cancel"
        android:background="?attr/selectableItemBackgroundBorderless"
        app:tint="@color/darkTeal"
        android:contentDescription="@string/close_button_description"/>

    <ImageView
        android:id="@+id/imageViewIcon"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:src="@drawable/teeth_helper"
        android:contentDescription="@string/teeth_helper_description"/>

    <TextView
        android:id="@+id/textViewThanks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageViewIcon"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="@string/thanks_booking"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/lightTeal"/>

    <TextView
        android:id="@+id/textViewConfirmation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewThanks"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:layout_marginBottom="50dp"
        android:text="@string/appointment_details"
        android:textSize="20sp"
        android:textColor="#666666"
        android:textAlignment="center"/>

    <Button
        android:id="@+id/buttonGoToAppointment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewConfirmation"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="@string/view_my_appointments_button"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:background="@color/darkTeal"/>

</RelativeLayout>